generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repo {
  id       String   @id @default(cuid())
  repoName String   @unique
  commits  Commit[]
  tags     String[]
}

model Commit {
  id                       String   @id @default(cuid())
  sha                      String   @unique
  message                  String
  date                     DateTime
  total                    Int
  additions                Int
  deletions                Int
  files                    File[]
  entireCommitAnalysis     String   @default("")
  recommendedCommitMessage String   @default("")
  tags                     String   @default("")
  repo                     Repo?    @relation(fields: [repoId], references: [id])
  repoId                   String?
}

model File {
  id           String   @id @default(cuid())
  sha          String
  filename     String
  status       String
  additions    Int
  deletions    Int
  changes      Int
  blob_url     String
  raw_url      String
  contents_url String
  patch        String
  commit       Commit?  @relation(fields: [commitId], references: [id])
  commitId     String?
  analysisId   String   @unique
  analysis     Analysis @relation(fields: [analysisId], references: [id])
}

model Analysis {
  id        String   @id @default(cuid())
  file      File?
  analysis  String
  createdOn DateTime @default(now())
}
